void main() 
{
	setlocale(LC_ALL, "Rus");
	

	int choose;
	printf("Кого унижать вас(1) или компьюктер(2)???\n");
	scanf_s("%d", &choose);
	if (choose == 1)
	{
		int i = random(1, 1000);
		//printf("Загаданное число компом = %d \n", i);
		bool flag = true;
		int a;
		while (flag)
		{
			printf("Компьютер уже загадал число в диапазоне от 1 до 1000, а чего ждешь ты? Отгадывай давай!\n");
			scanf_s("%d", &a);
			if (i == a)
			{
				flag = false;
				printf("Вы угадали! Похлопайте себе.\n");
			}
			else
			{
				printf("Вы не угадали продолжайте мучения дальше. МУАХАХАХАХА\n");
				if ( a > i)
					printf("Дам подсказку, твое число больше нужного тебе числа\n");
				else
					printf("Дам подсказку, твое число меньше нужного тебе числа\n");
			}
		}
	}
	else
	{
		int b, n, d_1, d_2, ch;
		char otvet = 'kl';
		printf("Введите число от 1 до 1000\n");
		scanf_s("%d", &b);
		n = 1;
		d_1 = 1;
		d_2 = 1000;
		ch = random(d_1, d_2);
		printf("Очередной ответ компа %d \n", ch);
		
		while (otvet!='=') 
		{
			scanf_s("%c", &otvet);
			if (otvet == '>') 
			{
				d_1 = ch;
				ch = random(d_1, d_2);
				printf("Очередной ответ компа %d \n", ch);
				n++;
			}
			else if (otvet == '<')
			{
				d_2 = ch;
				ch = random(d_1, d_2);
				printf("Очередной ответ компа %d \n", ch);
				n++;
			}
		}
		
		printf("Компьютер вас превзошел и отгадал с %d попытки?", n);
	}
	
	while (true);
	
	
}
